@model IEnumerable<WebApplication1.Models.ViewModels.Kitap_VM>

@{
    ViewData["Title"] = "Index";
}

<h1>Kitaplar</h1>

<p>
    <a asp-action="Create">Yeni Kitap Ekle</a> @* ??????? *@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KitapID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KitapAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KapakResmi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yazar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KitapID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KitapAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KapakResmi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yazar)
            </td>
            <td>
                <a asp-action="Guncelle" asp-route-id="@item.KitapID" class="btn btn-secondary">Güncelle</a>
            </td>
            <td>
                <a asp-action="Detay" asp-route-id="@item.KitapID" class="btn btn-primary">Detay</a>
            </td>
            <td>
                    <form asp-action="SeciliKitabiSil" method="post">
                        <input type="submit" value="Sil" onclick="return askForDelete()" />
                        <input type="hidden" value="@item.KitapID" name="id" />  @* URL'de gozukmemesi icin ID'yi hidden yaptik. Silme islemi icin ID bilgisine ihtiyac var ancak URL'de gozukmemesi icin hidden olmali.*@'
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    function askForDelete() {
        return confirm("Silmek istediğinizden emin misiniz?");
    }
</script>