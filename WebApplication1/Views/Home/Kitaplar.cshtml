@model IEnumerable<WebApplication1.Models.ViewModels.Kitap_VM>

@{
    ViewData["Title"] = "Kitaplar";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Kitaplar</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>@Html.DisplayNameFor(model => model.KitapAdi)</th>
                    <th>@Html.DisplayNameFor(model => model.Fiyat)</th>
                    <th>@Html.DisplayNameFor(model => model.KapakResmi)</th>
                    <th>@Html.DisplayNameFor(model => model.Yazar)</th>
                    <th>@Html.DisplayNameFor(model => model.Kategori)</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (item, index) in Model.Select((value, i) => (value, i + 1)))
                {
                    <tr>
                        <td>@index</td>
                        <td>@Html.DisplayFor(modelItem => item.KitapAdi)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fiyat)</td>
                        <td><img src="@Html.DisplayFor(modelItem => item.KapakResmi)" alt="Kapak Resmi" style="width: 50px; height: 75px; object-fit: cover;" /></td>
                        <td>@Html.DisplayFor(modelItem => item.Yazar)</td>
                        <td>@Html.DisplayFor(modelItem => item.Kategori)</td>
                        <td class="text-center">
                            <a class="btn btn-light btn-sm" href="#">Düzenle</a>
                            <a class="btn btn-light btn-sm" href="#">Detay</a>
                            <a class="btn btn-light btn-sm" href="#">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table-responsive {
        max-width: 100%;
        overflow-x: auto;
    }

    .table th, .table td {
        text-align: left;
        vertical-align: middle;
    }

    .thead-light {
        background-color: #f0f0f0;
        color: #333;
    }

    .table td {
        background-color: #ffffff;
        color: #555;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-sm {
        margin-right: 5px;
        padding: 4px 8px; 
    }

    .btn-light {
        background-color: #dcdcdc; 
        color: #555; 
        border: none; 
    }

        .btn-light:hover {
            background-color: #c4c4c4; 
            color: #333;
        }

    img {
        max-width: 100%;
        height: auto;
        object-fit: cover;
    }
</style>
