@model IEnumerable<WebApplication1.Models.ViewModels.Kategori_VM>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Kategoriler</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>@Html.DisplayNameFor(model => model.KategoriAdi)</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (item, index) in Model.Select((value, i) => (value, i + 1)))
                {
                    <tr>
                        <td>@index</td>
                        <td>@Html.DisplayFor(modelItem => item.KategoriAdi)</td>
                        <td class="text-center">
                            <a class="btn btn-light btn-sm" href="#">Düzenle</a>
                            <a class="btn btn-light btn-sm" href="#">Detay</a>
                            <a class="btn btn-light btn-sm" href="#">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table-responsive {
        max-width: 100%;
        overflow-x: auto;
    }

    .table th, .table td {
        text-align: left;
        vertical-align: middle;
    }

    .thead-light {
        background-color: #f0f0f0;
        color: #333;
    }

    .table td {
        background-color: #ffffff;
        color: #555;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-sm {
        margin-right: 5px;
        padding: 4px 8px; 
    }


    .btn-light {
        background-color: #dcdcdc; 
        color: #555; 
        border: none; 
    }

        .btn-light:hover {
            background-color: #c4c4c4; 
            color: #333;
        }
</style>
